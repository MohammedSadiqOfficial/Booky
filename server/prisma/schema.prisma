generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum BookStatus {
  READING
  COMPLETED
  TO_READ
}

model User {
  id        String   @id
  name      String
  email     String   @unique
  image     String   @default("")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  books Book[]
  notes Note[]
}

model Book {
  id            String     @id @default(uuid())
  title         String     @unique
  author        String
  publishedYear Int
  coverImage    String     @default("")
  status        BookStatus @default(TO_READ)
  readPages     Int        @default(0)
  totalPages    Int
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  notes         Note[]
  user          User?      @relation(fields: [userId], references: [id])
  userId        String?
}

model Note {
  id        String   @id @default(uuid())
  title     String
  content   String
  bookId    String
  color     String   @default("#FFFFC5")
  pin       Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  book      Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}
